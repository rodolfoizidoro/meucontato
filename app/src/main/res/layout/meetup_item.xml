<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="6dp">
    <RelativeLayout
            android:id="@+id/widget_meetup_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/meetup_icon"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:layout_alignParentStart="true"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/meetup_icon"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/meetup_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp"
                    android:maxLines="2"
                    tools:text="Developers SP Developers SP Developers SP"/>

            <TextView
                    android:id="@+id/meetup_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:textSize="13sp"
                    tools:text="Primeiros passos com Spring MVC JAVA e Spring Boot"/>

            <TextView
                    android:id="@+id/meetup_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix"
                    android:padding="2dp"
                    android:textSize="12sp"
                    tools:text="Aug 17, 7:00 PM"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
