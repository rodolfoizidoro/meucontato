        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="rodolfoizidoro.meucontato.viewmodel.MeetupDetailViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/meetup_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_arrow_back"/>

            <TextView
                    android:id="@+id/meetup_detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:text="@{viewModel.event.name}"
                    android:gravity="left|center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:singleLine="true"/>
        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">

                <rodolfoizidoro.meucontato.widget.IconTitleMessage
                        android:id="@+id/meetup_detail_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <rodolfoizidoro.meucontato.widget.IconTitleMessage
                        android:id="@+id/meetup_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <rodolfoizidoro.meucontato.widget.IconTitleMessage
                        android:id="@+id/meetup_detail_host"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <rodolfoizidoro.meucontato.widget.IconTitleMessage
                        android:id="@+id/meetup_detail_confirmation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <rodolfoizidoro.meucontato.widget.IconTitleMessage
                        android:id="@+id/meetup_detail_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

